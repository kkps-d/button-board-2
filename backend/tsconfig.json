{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "ES2022"
    ],
    "module": "commonjs",
    "paths": {
      "@common/*": ["../common/*"],
      "@backend/*": ["./*"]
    },
    "sourceMap": true,
    "outDir": "../dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}